<%= render "shared/jp_header" %>
<div class="top">
  <div class="select_back">
    <%= image_tag 'top_en_background.png', class: "top_jp_background" %>
  </div>
  <div class="registaration_form">
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%#= devise_error_messages! %>
      <div class="private_form" >
        <div class="private_form_message">
          Registration Form
        </div>
        <div class="nickname_form">
          <%= f.label :nickname %> <em></em><br />
          <%= f.text_field :nickname, placeholder: "enter the nickname", autofocus: true %>
        </div>
        <div class="age_form">
          <%= f.label :age %> <em></em><br />
          <%= f.text_field :age, placeholder: "enter the your age", autofocus: true, maxlength: "3" %>
        </div>
        <div class="nationality_form">
          <%= f.label :nationality %> <em></em><br />
          <%= f.select :nationality_id, [["japan", 1], ["chaina", 2], ["other", "3"]], {}, { class: 'nationality_select' , required: true }  %>
        </div>
        <div class="email_form">
          <%= f.label :email %><br />
          <%= f.email_field :email, placeholder: "enter the your email" %>
        </div>
        <div class="password_form">
          <%= f.label :password %><em></em><br />
          <%= f.password_field :password, placeholder: "enter the your password", autocomplete: "off" %>
        </div>
        <div class="password_form_con">
           <%= f.label :password %><br />
           <%= f.password_field :password_confirmation, placeholder: "enter the your password", autocomplete: "off" %>
        </div>
      </div>
      
      <div class="sign_up_form">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
  </div>
</div>
